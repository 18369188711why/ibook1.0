<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/listviewdemo"
    android:background="@drawable/tv_bookinfo_status">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll_bookInfoTop">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/text"
                android:id="@+id/tv_bookInfoName"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_middle"
                android:textColor="@color/text"
                android:id="@+id/tv_bookInfoISBN"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_middle"
            android:textColor="@color/text"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/ll_bookInfoTop"
            android:id="@+id/tv_bookInfoType"
            />
  </RelativeLayout>

   <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"       >
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="作者:"
               android:textSize="@dimen/text_size_middle"
               android:textColor="@color/text"
               android:id="@+id/tv_bookInfo1"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/tv_bookInfoAuthor"
               android:textSize="@dimen/text_size_middle"
               android:textColor="@color/text"/>
           </LinearLayout>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:textColor="@color/text"
           android:textSize="@dimen/text_size_middle"
           android:id="@+id/tv_bookInfoStoredNum"
           />
   </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出版社:"
                android:textSize="@dimen/text_size_middle"
                android:textColor="@color/text"
                android:id="@+id/tv_bookInfo2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_bookInfoPublisher"
                android:textSize="@dimen/text_size_middle"
                android:textColor="@color/text"/>
            </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_bookInfoAvailableNum"
            android:textSize="@dimen/text_size_middle"
            android:textColor="@color/text"
            />
    </RelativeLayout>
</LinearLayout>
