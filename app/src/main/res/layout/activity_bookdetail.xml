<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="@dimen/marge_top"
        android:layout_marginLeft="@dimen/marge_left"
        android:layout_marginStart="@dimen/marge_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_large"
        android:id="@+id/tv_bookDetailName_code"
        android:textColor="@color/text"/>

    <ListView
        android:id="@+id/lv_bookDetail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@color/light_white"
        android:dividerHeight="@dimen/divider_height"
        />

    <ProgressBar
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/pb_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"
        style="@style/progressBar"
        />

</LinearLayout>
