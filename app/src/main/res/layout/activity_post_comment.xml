<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.sdu.wh.ibook.ui.PostCommentActivity"
    android:orientation="vertical">

    <EditText
        android:layout_marginStart="@dimen/marge_left"
        android:layout_marginLeft="@dimen/marge_left"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="@dimen/marge_bottom"
        android:layout_marginRight="@dimen/marge_right"
        android:layout_marginEnd="@dimen/marge_right"
        android:hint="@string/comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_comment"
        android:background="@drawable/input_bg"
        />
    <Button
        android:id="@+id/btn_post"
        android:layout_marginLeft="@dimen/marge_left"
        android:layout_marginStart="@dimen/marge_left"
        android:layout_marginRight="@dimen/marge_left"
        android:layout_marginEnd="@dimen/marge_left"
        android:layout_marginBottom="@dimen/marge_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_02"
        android:text="@string/post"
        android:textColor="#ffffff"
        />
</LinearLayout>
