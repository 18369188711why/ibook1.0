<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="WelcomeActivity">
        <item name="android:animation">@anim/activity_welcome</item>
    </style>
    
    <style name="MainActivity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_main_open</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_main_open</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_main_close</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_main_close</item>
    </style>

    <style name="UserItemActivity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_user_item_open</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_user_item_open</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_user_item_close</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_user_item_close</item>
    </style>

    <style name="UserActivity">
    <item name="android:activityOpenEnterAnimation">@anim/activity_user_open</item>
    <item name="android:activityCloseEnterAnimation">@anim/activity_user_open</item>
    <item name="android:activityOpenExitAnimation">@anim/activity_user_close</item>
    <item name="android:activityCloseExitAnimation">@anim/activity_user_close</item>
</style>

    <style name="LoginActivity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_login_open</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_login_open</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_login_close</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_login_close</item>
    </style>


    <style name="MyDialogStyle">
            <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
            <item name="android:windowFrame">@null</item><!--边框-->
            <item name="android:windowNoTitle">true</item><!--无标题-->
            <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
            <item name="android:windowIsTranslucent">true</item><!--半透明-->
            <item name="android:windowContentOverlay">@null</item><!--内容覆盖 -->
            <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item><!-- 窗口样式Dialog -->
            <item name="android:backgroundDimEnabled">true</item><!--模糊-->
  　</style>

    <style name="progressBar">
        <item name="android:indeterminateDrawable">@drawable/progress</item>
        <item name="android:minWidth">30dip</item>
        <item name="android:maxWidth">30dip</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:maxHeight">30dip</item>
    </style>

    <style name="spinner_style">
        <item name="android:paddingLeft">0dip</item>
    </style>




    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
    </style>
</resources>
