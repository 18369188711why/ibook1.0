<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.sdu.wh.ibook" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".IBookApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/MainActivity"
            android:windowSoftInputMode="adjustPan|stateHidden" >
        </activity>
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/WelcomeActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.LoginActivity"
            android:theme="@style/LoginActivity" >
        </activity>
        <activity
            android:name=".ui.UserActivity"
            android:theme="@style/UserActivity" >
        </activity>
        <activity android:name=".ui.BookDetailActivity" >
        </activity>
        <activity
            android:name=".ui.SearchResultActivity"
            android:label="@string/title_activity_search_result" >
        </activity>
        <activity
            android:name=".ui.HotActivity"
            android:label="@string/title_activity_hot" >
        </activity>
        <activity
            android:name=".ui.PostCommentActivity"
            android:label="@string/title_activity_post_comment" >
        </activity>
        <activity
            android:name=".ui.SearchHisActivity"
            android:label="@string/title_activity_search_his"
            android:theme="@style/UserItemActivity" >
        </activity>
        <activity
            android:name=".ui.AsordActivity"
            android:label="@string/title_activity_asord"
            android:theme="@style/UserItemActivity" >
        </activity>
        <activity
            android:name=".ui.PregActivity"
            android:label="@string/title_activity_preg"
            android:theme="@style/UserItemActivity" >
        </activity>
        <activity
            android:name=".ui.AboutUsActivity"
            android:label="@string/title_activity_about_us" >
        </activity>
    </application>

</manifest>
